<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorizontalScroll">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Choose Game"
        android:textSize="35sp"
        />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_badminton" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_baseball" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_bowling" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_bikehelmet" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_cricket" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_helmet" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_ping_pong" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_roller_skate" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_skateboard" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/games_weight_lifting" />
        </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>